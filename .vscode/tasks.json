{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build current C++ file",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Wshadow",
                "-Wformat=2",
                "-Wcast-align",
                "-Wconversion",
                "-Wsign-conversion",
                "-Wnull-dereference",
                "-g3",
                "-O0",
                "-c",
                "${file}",
                "-o",
                "./build/Debug/${fileBasenameNoExtension}.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/CPP"
            }
        },
        {
            "label": "link and run current C++ file",
            "type": "shell",
            "dependsOn": "build current C++ file",
            "command": "clang++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Wshadow",
                "-Wformat=2",
                "-Wcast-align",
                "-Wconversion",
                "-Wsign-conversion",
                "-Wnull-dereference",
                "-g3",
                "-O0",
                "./build/Debug/${fileBasenameNoExtension}.o",
                "-o",
                "./build/Debug/outDebug"
            ],
            "group": "none",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/CPP"
            }
        },
        {
            "label": "run current executable",
            "type": "shell",
            "dependsOn": "link and run current C++ file",
            "command": "./build/Debug/outDebug",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/CPP"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
