{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Paradigm",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Wshadow",
                "-Wformat=2",
                "-Wcast-align",
                "-Wconversion",
                "-Wsign-conversion",
                "-Wnull-dereference",
                "-g3",
                "-O0",
                "/Users/creeperhead/COMYR2/COM2040/CPP/Paradigm.cpp",
                "-o",
                "./build/Debug/outDebug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "/Users/creeperhead/COMYR2/COM2040/CPP" // Ensure this points to your source directory
            }
        },
        {
            "label": "run Paradigm",
            "type": "shell",
            "command": "./build/Debug/outDebug",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "/Users/creeperhead/COMYR2/COM2040/CPP" // Ensure this points to your source directory
            }
        }
    ]
}
